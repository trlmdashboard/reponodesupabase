{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/login",
      "methods": ["POST"],
      "dest": "/api/login.js"
    },
    {
      "src": "/dashboard",
      "dest": "/api/dashboard.js"
    },
    {
      "src": "/logout",
      "dest": "/api/logout.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
